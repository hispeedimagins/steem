<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/recyclerview_selector"
    android:id="@+id/mainrele"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:cardBackgroundColor="?attr/cardBackgroundColor"

        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        contentPadding="1dp"

        android:layout_gravity="center_horizontal"
        android:id="@+id/cardviewchat"
        >

        <LinearLayout
            android:padding="2dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >


                <TextView

                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_resteemed_by"
                    android:text="name"


                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_repeat_black_24px"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"




                    android:drawablePadding="4dp"

                    android:textStyle="bold"
                    />

                <TextView
                    android:paddingRight="5dp"
                    android:textStyle="bold"

                    android:id="@+id/textViewOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:drawableEnd="@drawable/ic_baseline_more_vert_24px"
                    android:textAppearance="?android:textAppearanceLarge" />
                <!--android:text="&#8942;"-->
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:elevation="5dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/profile_circular_image"

                        android:layout_margin="4dp"
                        android:id="@+id/article_pfp"
                        android:adjustViewBounds="true"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/article_name"
                        android:text="name"

                        tools:fontFamily="@font/roboto_light"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/article_date"
                        android:text="date"

                        tools:fontFamily="@font/roboto_light"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <TextView
                    android:textColor="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_tag"
                    android:text="tag"

                    tools:fontFamily="@font/roboto_light"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/openarticle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressbar"
                android:visibility="gone"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/article_like"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/article_likes"
                        android:text="2400"


                        tools:fontFamily="@font/roboto_light"
                        android:gravity="center"

                        android:drawableLeft="@drawable/ic_thumb_up_black_24px"
                        android:drawablePadding="2dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/article_comments"
                        android:text="200"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        tools:fontFamily="@font/roboto_light"
                        android:drawableLeft="@drawable/ic_comment_black_24px"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/article_reply_now"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/article_reblog"

                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"

                        android:drawableLeft="@drawable/ic_reply_black_24px"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/article_edit"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/article_edits"




                        android:gravity="center"

                        android:drawableLeft="@drawable/ic_mode_edit_black_24px"
                        android:drawablePadding="2dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>



                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/article_payout"
                        android:text="200"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        tools:fontFamily="@font/roboto_light"
                        android:drawableLeft="@drawable/ic_attach_money_black_24px"
                        android:textStyle="bold"
                        />
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout >
