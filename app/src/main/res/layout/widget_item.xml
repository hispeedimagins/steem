<ProgressBar
    android:id="@+id/progressbar"
    android:visibility="gone"
    android:indeterminate="true"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

<LinearLayout
