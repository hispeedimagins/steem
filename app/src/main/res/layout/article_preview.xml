<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/cardBackgroundColor"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    contentPadding="1dp"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/cardviewchat">

    <LinearLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/article_resteemed_by_Linear"
            >


            <TextView

                android:id="@+id/article_resteemed_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_repeat_black_24px"
                android:drawablePadding="4dp"


                android:padding="5dp"

                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"


                android:padding="5dp"

                android:textStyle="bold" />


            <!--<TextView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="5dp"
                android:drawableEnd="@drawable/ic_baseline_more_vert_24px"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />-->
            <!--android:text="&#8942;"-->
        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_weight="0"
                android:orientation="vertical"
                android:layout_width="64dp"
                android:layout_height="64dp">
                <ImageView
                    android:contentDescription="profile_image"
                    android:elevation="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/profile_circular_image"


                    android:id="@+id/article_pfp"
                    android:adjustViewBounds="true"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
                <!--<android.support.v7.widget.CardView
                    android:maxWidth="48dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="12dp"
                    android:id="@+id/view2"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">
                    <ImageView
                        android:elevation="5dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/profile_circular_image"
                        android:maxWidth="48dp"
                        android:layout_margin="5dp"
                        android:id="@+id/article_pfp"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                </android.support.v7.widget.CardView>-->
            </LinearLayout>
            <!--<ImageView
                android:maxWidth="48dp"
                android:layout_margin="5dp"
                android:id="@+id/article_pfp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_name"
                    android:text="name"


                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@id/article_name"
                    android:textColor="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_tag"
                    android:text="tag"


                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_date"
                    android:text="date"


                    android:textStyle="bold"
                    />

            </LinearLayout>
            <!--<TextView
                android:textColor="@color/colorAccent"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/article_tag"
                android:text="tag"


                android:textStyle="bold"
                />-->

            <TextView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="5dp"
                android:drawableEnd="@drawable/ic_baseline_more_vert_24px"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/openarticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--<TextView
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/article_title"
                android:text="tag"

                android:maxLines="2"
                android:textStyle="bold"
                />-->

            <ImageView
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:id="@+id/article_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:drawingCacheQuality="low"

                />

            <TextView
                android:layout_marginTop="7dp"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:padding="5dp"
                android:textAlignment="viewStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/article_title"
                android:text="tag"

                android:maxLines="2"
                android:textStyle="bold"
                />

            <!--<eu.fiskur.markdownview.MarkdownView
                android:id="@+id/article_summary_markdown"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />-->

            <!--<ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ScrollView>-->
            <TextView

                android:layout_marginTop="5dp"

                android:id="@+id/article_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:paddingLeft="5sp"
                android:maxLines="3"
                android:ellipsize="end"
                />

        </LinearLayout>



        <!--<TextView
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_title"
            android:text="tag"

            android:maxLines="2"
            android:textStyle="bold"
            />-->
        <ProgressBar
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >





            <LinearLayout
                android:id="@+id/article_like"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_likes"
                    android:text="2400"



                    android:gravity="center"

                    android:drawableLeft="@drawable/ic_thumb_up_black_24px"
                    android:drawablePadding="4dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_comments"
                    android:text="200"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"

                    android:drawableLeft="@drawable/ic_comment_black_24px"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/article_reblog_now"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_reblog"

                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"

                    android:drawableLeft="@drawable/ic_repeat_black_24px"
                    android:textStyle="bold"
                    />
            </LinearLayout>



            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/accgreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_payout"
                    android:text="200"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"

                    android:drawableLeft="@drawable/ic_attach_money_black_24px"
                    android:textStyle="bold"
                    />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>
