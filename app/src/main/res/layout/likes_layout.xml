<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:markdown="http://schemas.android.com/apk/res-auto"

        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        contentPadding="1dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cardviewchat"
        >

        <ProgressBar
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:orientation="vertical"
                android:layout_width="64dp"
                android:layout_height="64dp">
                <ImageView
                    android:elevation="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/profile_circular_image"


                    android:id="@+id/article_pfp"
                    android:adjustViewBounds="true"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
            </LinearLayout>
            <!--<ImageView
                android:maxWidth="48dp"
                android:layout_margin="5dp"
                android:id="@+id/article_pfp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:text="name"


                    android:textStyle="bold"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_vote_percent"
                    android:text="date"


                    android:textStyle="bold"
                    />
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_vote_power"
                    android:text="date"


                    android:textStyle="bold"
                    />
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_date"
                    android:text="date"


                    android:textStyle="bold"
                    />

            </LinearLayout>
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value"
                android:text="tag"


                android:textStyle="bold"
                />

            <TextView
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge" />
        </LinearLayout>



    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>